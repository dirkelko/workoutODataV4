<mvc:View
    controllerName="fsworkouts.controller.Workout"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:mc="fsworkouts.control"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Page
        id="WorkoutPage"
        enableScrolling="true"
    >
    <customHeader>
        <Bar>
            <contentLeft>
                <Button
                    icon="sap-icon://nav-back"
                    press=".navToMain"
                />
            </contentLeft>
            <contentMiddle>
                <Title
                    text="{workoutsModel>name} Level {workoutsModel>level}"
                />
            </contentMiddle>
            <contentRight>
                <core:Icon
                    id="favouriteIcon"
                    src="sap-icon://heart-2"
                    size="1.5rem"
                    color="white"
                    press=".setFavourite"/>
            </contentRight>
        </Bar>
    </customHeader>
        <content>
            <VBox
                renderType="Bare"
                fitContainer="true"
            >
                <mc:Timer
                    id="Timer"
                    workoutName="{workoutsModel>name}"
                    exercises="{
                        path:'workoutsModel>exercises', 
                        mode:'OneWay', 
                        targetType:'any'}"
                    graphicsWidth="1200px"
                    graphicsHeight="1200px"
                    width="100%"
                    height="60vh"
                    exerciseFinished=".onExerciseFinished"
                    exerciseStarted=".onExerciseStarted"
                />
                <Button
                    width="100%"
                    id="startButton"
                    icon="sap-icon://media-play"
                    text="START"
                    type="Emphasized"
                    press="startWorkout"
                />
                <Button
                    width="100%"
                    id="stopButton"
                    icon="sap-icon://media-pause"
                    text="PAUSE"
                    type="Neutral"
                    press="stopWorkout"
                    visible="false"
                />
                <HBox
                    fitContainer="true"
                    renderType="Bare"
                >
                    <Button
                        width="50%"
                        id="continueButton"
                        text="CONTINUE"
                        icon="sap-icon://media-play"
                        type="Emphasized"
                        press="continueWorkout"
                        visible="false"
                    >
                        <!--layoutData>
                            <FlexItemData
                                growFactor="1"
                                baseSize="0"
                            />
                        </layoutData-->
                    </Button>
                    <Button
                        width="50%"
                        id="resetButton"
                        text="RESET"
                        type="Neutral"
                        icon="sap-icon://restart"
                        press="resetWorkout"
                        visible="false"
                    >
                        <!--layoutData>
                            <FlexItemData
                                growFactor="1"
                                baseSize="0"
                            />
                        </layoutData-->
                    </Button>
                    <Button
                        width="50%"
                        id="nextButton"
                        text="NEXT"
                        type="Neutral"
                        icon="sap-icon://media-forward"
                        press="nextExercise"
                        visible="false"
                    >
                        <!--layoutData>
                            <FlexItemData
                                growFactor="1"
                                baseSize="0"
                            />
                        </layoutData-->
                    </Button>
                </HBox>
                <ScrollContainer
                    height="100%"
                    vertical="true"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                    <Table
                        id="exercisesList"
                        mode="None"
                        includeItemInSelection="false"
                        items="{path: 'workoutsModel>exercises', sorter: {path:'round', group:'.getRound', descending: false}}"
                    >
                        <columns>
                            <Column width="80%">
                                <header>
                                    <!--Text text="Exercise"/-->
                                </header>
                            </Column>
                            <Column width="20%">
                                <header>
                                    <!--Text text="Duration"/-->
                                </header>
                            </Column>
                            <Column
                                width="15%"
                                visible="false"
                            >
                                <header>
                                    <Text text="Round" />
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem app:exId="{workoutsModel>ID}" press="handleLinkPress" type="Active" >
                                <cells>
                                    <Link
                                        text="{workoutsModel>exercise/name}"
                                        press="handleLinkPress"
                                    />
                                    <Text text="{workoutsModel>duration}" />
                                    <Text text="{workoutsModel>round}" />
                                  </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </ScrollContainer>
            </VBox>
        </content>
    </Page>
</mvc:View>
